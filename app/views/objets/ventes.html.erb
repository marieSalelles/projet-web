<div class="container">

  <!-- Slide -->
  <div class="container">
    <div class="header-page header-img">
      <div class="col-md-6 col-md-offset-6">
        <div class="row">
          <div class="inner-content-compte">
            <div class="header-content">
              <h1>Mes objets</h1>
              <hr>
              <p>Retrouvez les objets que vous avez mis en vente</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>


  <!-- Page Heading -->

  <!--categorie navigation-->

  <div class="container margin-top">
    <div class="portfolio-wrapper">

      <!--container-->
      <div class="row" id="work-grid">
        <h5 class="objSousTitre">Les objets en vente</h5>
        <% @objets.each do |objet| %>
          <div class="col-md-4 col-sm-4 col-xs-12 mix music" id="<%= objet.id %>">
            <div class="img home-portfolio-image">
              <%= cl_image_tag("#{objet.id}.jpg",alt: objet.nomobjet) %>
              <div class="overlay-thumb">
                <a href="javascript:void(0)" class="like-product">
                  <i class="ion-ios-heart-outline"></i>
                  <span class="output"><%= objet.categorie.nomcategorie.capitalize %></span>
                </a>
                <div class="details buttonVente">
                  <span class="modifV"> <%= link_to "Liste des encheres", objet_encheres_path(objet.id),  {:class => "linkOM"} %></span><br/>
                  <span class="modifV"> <%= link_to "Modifier", edit_objet_path(objet.id),  {:class => "linkOM"} %></span><br/>
                  <span class="deletV "> <a class="linkOD" data-url="<%=objet_path(objet)%>">Supprimer</a></span>
                </div>

                  <div class="details">
                  <span class="title"><%= objet.nomobjet %></span>
                    <span class="info"><%= objet.encheres.length > 0 ? objet.encheres.last.prix : objet.prix %>0 €</span>
                </div>
                <span class="btnBefore"></span>
                <span class="btnAfter"></span>
              </div>
            </div>
          </div>
        <% end %>

      </div>
      <div class="row">
       <h5 class="objSousTitre">Les objets vendus ou plus en vente</h5>
      </div>
      <div class="row" id="work-grid">
        <% @objets2.each do |objet| %>
          <div class="col-md-4 col-sm-4 col-xs-12 mix music">
            <div class="img home-portfolio-image">
              <%= cl_image_tag("#{objet.id}.jpg",alt: objet.nomobjet) %>
              <div class="overlay-thumb">
                <a href="javascript:void(0)" class="like-product">
                  <i class="ion-ios-heart-outline"></i>
                  <span class="output"><%= objet.categorie.nomcategorie.capitalize %></span>
                </a>
                <div class="details">
                  <span class="title"><%= objet.nomobjet %></span>
                  <span class="info"><%= objet.encheres.length > 0 ? objet.encheres.last.prix : objet.prix %>0 €</span>
                </div>
                <span class="btnBefore"></span>
                <span class="btnAfter"></span>
              </div>
            </div>
          </div>
        <% end %>
      </div>


      <ul class="pagination justify-content-center">

      </ul>

    </div>
  </div>
</div>
<!-- /.container -->
